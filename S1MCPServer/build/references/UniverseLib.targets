<Project>
    <!--UniverseLib References - Cross-runtime reflection utilities-->
    <ItemGroup Label="UniverseLib" Condition="'$(IsMono)' == 'true'">
        <!-- Mono UniverseLib reference -->
        <Reference Include="UniverseLib">
            <HintPath>$(CommonDir)\UniverseLib\UniverseLib.dll</HintPath>
            <Private>false</Private>
        </Reference>
    </ItemGroup>

    <ItemGroup Label="UniverseLib" Condition="'$(IsMono)' != 'true'">
        <!-- IL2CPP UniverseLib reference -->
        <Reference Include="UniverseLib">
            <HintPath>$(CommonDir)\UniverseLib\UniverseLib.dll</HintPath>
            <Private>false</Private>
        </Reference>
    </ItemGroup>
</Project>

